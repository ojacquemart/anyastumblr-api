# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#--------------
# Tumblr
#--------------

# Index
GET           /                                                     tumblr.controllers.Application.index

# Tumblr
GET           /api/tumblr/sites                                     tumblr.controllers.Tumblr.getSites
GET           /api/tumblr/sites/:slug                               tumblr.controllers.Tumblr.getSiteFirstPage(slug: String)
GET           /api/tumblr/sites/:slug/page/:pageNumber              tumblr.controllers.Tumblr.getSitePageByPageNumber(slug: String, pageNumber: Int)

# Tumblr stats
GET           /api/tumblr/stats                                     tumblr.controllers.TumblrStats.index

# Tumblr administration
GET           /tumblr/administration                                tumblr.controllers.admin.TumblrAdminController.index

# Authentication
GET           /tumblr/administration/login                          tumblr.controllers.admin.TumblrAdminController.login
POST          /tumblr/administration/login                          tumblr.controllers.admin.TumblrAdminController.authenticate
GET           /tumblr/administration/logout                         tumblr.controllers.admin.TumblrAdminController.logout

GET           /api/tumblr/admin/caches                              tumblr.controllers.admin.CachesController.get
DELETE        /api/tumblr/admin/caches                              tumblr.controllers.admin.CachesController.removeAll
DELETE        /api/tumblr/admin/caches/:cacheKey                    tumblr.controllers.admin.CachesController.remove(cacheKey: String)

# Tumblr administration slugs
GET           /api/tumblr/admin/site-types/slug/exists/:slug        tumblr.controllers.admin.SiteTypeController.existsSlug(slug)
GET           /api/tumblr/admin/sites/slug/exists/:slug             tumblr.controllers.admin.SiteController.existsSlug(slug)

# Tumblr administration autosource
->            /api/tumblr/admin/site-types                          tumblr.controllers.admin.SiteTypeController
->            /api/tumblr/admin/sites                               tumblr.controllers.admin.SiteController

#--------------
# Twitter
#--------------

GET           /api/tweets/:query                                    twitter.controllers.TweetsController.index(query: String)
GET           /api/tweets/stream/:query                             twitter.controllers.TweetsController.stream(query: String)

->  /admin      admin.Routes

